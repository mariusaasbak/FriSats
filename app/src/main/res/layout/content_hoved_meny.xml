<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.kristoffer.newazureuser.HovedMenyActivity"
    tools:showIn="@layout/activity_hoved_meny">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logg ut"
        android:id="@+id/logg_ut_btn"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profil"
        android:id="@+id/profil_btn"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/logg_ut_btn"
        android:layout_toStartOf="@+id/logg_ut_btn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logget inn som:\nBruker"
        android:id="@+id/logget_inn_som_txt"
        android:textSize="18dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ny tjeneste"
        android:id="@+id/ny_tjeneste_btn"
        android:layout_below="@+id/profil_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="108dp" />
</RelativeLayout>
