<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.kristoffer.newazureuser.OpprettGruppeActivity"
    tools:showIn="@layout/activity_opprett_gruppe">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="Opprett en tjenestegruppe"
        android:id="@+id/opprett_gruppe_textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gruppe_navn_edit_text"
        android:layout_below="@+id/opprett_gruppe_textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="64dp"
        android:hint="Gruppe Navn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gruppeBeskrivelse_edit_text"
        android:layout_below="@+id/gruppe_navn_edit_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/gruppe_navn_edit_text"
        android:layout_alignEnd="@+id/gruppe_navn_edit_text"
        android:hint="Beskrivelse av gruppen" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrer ny gruppe"
        android:id="@+id/registrer_ny_gruppe_btn"
        android:layout_marginTop="120dp"
        android:layout_below="@+id/gruppeBeskrivelse_edit_text"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
