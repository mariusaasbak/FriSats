<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.kristoffer.newazureuser.ProfilActivity"
    tools:showIn="@layout/activity_profil">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profil Informasjon"
        android:id="@+id/textView_profil_informasjon_txt"
        android:textSize="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Oppdater informasjon"
        android:id="@+id/oppdater_profil_informasjon_btn"
        android:layout_below="@+id/textView_profil_informasjon_txt"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profil Fornavn"
        android:id="@+id/textView_profil_fornavn_txt"
        android:textSize="20dp"
        android:layout_below="@+id/oppdater_profil_informasjon_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profil Etternavn"
        android:textSize="20dp"
        android:id="@+id/textView_profil_etternavn_txt"
        android:layout_below="@+id/textView_profil_fornavn_txt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profil Adresse"
        android:textSize="20dp"
        android:id="@+id/textView_profil_adresse_txt"
        android:layout_below="@+id/textView_profil_etternavn_txt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profil Post Nummer"
        android:textSize="20dp"
        android:id="@+id/textView_profil_post_nummer_txt"
        android:layout_below="@+id/textView_profil_adresse_txt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profil Location"
        android:textSize="20dp"
        android:id="@+id/textView_profil_location_txt"
        android:layout_below="@+id/textView_profil_post_nummer_txt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profil Telefon Nummer"
        android:textSize="20dp"
        android:id="@+id/textView_profil_telefon_nummer_txt"
        android:layout_below="@+id/textView_profil_location_txt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profil Epost"
        android:textSize="20dp"
        android:id="@+id/textView_profil_epost_txt"
        android:layout_below="@+id/textView_profil_telefon_nummer_txt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
