<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.kristoffer.newazureuser.ShowServiceDetailsActivity"
    tools:showIn="@layout/activity_show_service_details"
    android:background="#d8fcf5">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tjeneste Navn"
        android:textSize="20dp"
        android:id="@+id/tjenesteNavnTextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beskrivelse av denne tjenesten:\nEr ledig for jobb så bare gi en lyd om du trenger noe. Jeg kan hjelpe med alt som har med denn tjenesten å gjøre."
        android:id="@+id/beskrivelse_av_tjenesten_textView"
        android:layout_marginTop="70dp"
        android:layout_below="@+id/tjenesteNavnTextView"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tilgjengelig Fra:"
        android:id="@+id/tilgjengelig_fra_textView"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/beskrivelse_av_tjenesten_textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#56cf25" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tilgjengelig Til:"
        android:id="@+id/tilgjengelig_til_textView"
        android:layout_below="@+id/tilgjengelig_fra_textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#56cf25" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pris"
        android:id="@+id/unit_price_textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#56cf25" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tilbyder:"
        android:id="@+id/tilbyder_textView"
        android:layout_below="@+id/tilgjengelig_til_textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/tilbyder_imageView"
        android:layout_alignBottom="@+id/kontakt_informasjons_btn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kontakt Informasjon"
        android:id="@+id/kontakt_informasjons_btn"
        android:layout_below="@+id/tilbyder_textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:text="Bestill"
        android:textSize="40dp"
        android:id="@+id/bestill_btn"
        android:layout_below="@+id/tilbyder_imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tjeneste gruppe:"
        android:id="@+id/tjenesteServiceGruppe_textView"
        android:layout_below="@+id/tjenesteNavnTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
